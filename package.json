{
  "name": "static-viewer",
  "version": "1.0.0",
  "description": "One click to view static website in folder",
  "main": "src/app.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/indiefun/static-viewer.git"
  },
  "keywords": [
    "static",
    "website",
    "viewer"
  ],
  "author": "Kevin Loo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/indiefun/static-viewer/issues"
  },
  "homepage": "https://github.com/indiefun/static-viewer#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.63",
    "electron": "^17.0.1",
    "electron-icon-builder": "^2.0.1"
  },
  "dependencies": {
    "connect": "^3.7.0",
    "serve-static": "^1.14.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "icon"
      },
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "indiefun",
              "name": "static-viewer"
            }
          }
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "StaticViewer"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
